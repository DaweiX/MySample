<Page
    x:Class="MySample.Pages.Viewpanels.viewpanels"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MySample.Pages.Viewpanels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Pivot>
                <PivotItem Header="分组视图">
                    <StackPanel>
                        <Button x:Name="Grp" Content="Group" Height="200" Width="240" Background="Silver" Click="Grp_Click"/>
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="分组">
                    <StackPanel>
                        <Button x:Name="Zom" Content="Zoom" Height="200" Width="240" Background="Coral" Click="zom_Click"/>
                    </StackPanel>
                </PivotItem>
            </Pivot>
        </StackPanel>
    </Grid>
</Page>
