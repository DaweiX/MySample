<Page
    x:Class="MySample.Pages.Controls.controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MySample.Pages.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot>
            <PivotItem Header="列表">
                <StackPanel>
                    <Button x:Name="Lst" Content="List" Height="200" Width="240" Background="LightCoral" Click="lst_Click"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="控件">
                <StackPanel>
                    <Button x:Name="Con" Content="Controls" Height="200" Width="240" Background="Plum" Click="con_Click"/>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </StackPanel>
</Page>
